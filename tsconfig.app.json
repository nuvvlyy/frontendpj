{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": []
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "app/**/*.d.ts",
    "app/**/*.tsx",
    "test/**/*.ts",
    "test/**/*.tsx",
    "node_modules/@types/**/*.d.ts",
    "node_modules/typescript/lib/*.d.ts",
    "node_modules"
  ],
  "exclude": [
    "src/test.ts",
    "src/**/*.spec.ts",
    "node_modules"
  ]
}
